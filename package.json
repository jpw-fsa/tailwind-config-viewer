{
  "name": "tailwind-config-viewer",
  "version": "2.0.3",
  "description": "View your Tailwind CSS config file...visually!",
  "author": {
    "name": "Ryan Ogden",
    "email": "ryaneogden@gmail.com"
  },
  "scripts": {
    "serve": "node cli/index.js -c tailwind.config.sample.js & vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "lint": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "build:docs": "npm run build && node ./cli export ./docs -c tailwind.config.sample.js",
    "prepublishOnly": "npm run lint --no-fix && npm run build",
    "version": "npm run build:docs && git add docs"
  },
  "bin": {
    "tailwind-config-viewer": "./cli/index.js",
    "tailwindcss-config-viewer": "./cli/index.js"
  },
  "repository": "github:rogden/tailwind-config-viewer",
  "bugs": {
    "url": "https://github.com/rogden/tailwind-config-viewer/issues"
  },
  "keywords": [
    "tailwind",
    "tailwindcss"
  ],
  "license": "MIT",
  "files": [
    "server",
    "cli",
    "dist",
    "lib"
  ],
  "engines": {
    "node": ">=13"
  },
  "dependencies": {
    "@koa/router": "^12.0.1",
    "autoprefixer": "^10.4.19",
    "commander": "^6.0.0",
    "fs-extra": "^9.0.1",
    "koa": "^2.14.2",
    "koa-static": "^5.0.0",
    "open": "^7.0.4",
    "portfinder": "^1.0.26",
    "postcss": "^8.4.38",
    "replace-in-file": "^6.1.0"
  },
  "peerDependencies": {
    "tailwindcss": "1 || 2 || 2.0.1-compat || 3"
  },
  "devDependencies": {
    "@vue/eslint-config-standard": "^8.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vueuse/core": "^10.11.0",
    "defu": "^3.2.2",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.3",
    "tailwindcss": "^1.4.4",
    "tailwindcss-dark-mode": "^1.1.6",
    "vite": "^5.0.10",
    "vitest": "^1.0.4",
    "vue": "^3.4.29",
    "vue-draggable-resizable": "^3.0.0"
  }
}
